@model IEnumerable<Evento>
@{
    ViewData["Title"] = "INICIO";
    ViewData["Nav"] = "ME APUNTO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
<link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">
<script src="~/js/index.js"></script>
<div id="main-container">
        <aside id="main-menu">
            <div id="main-menu-wrapper">
            @if (User.Identity.IsAuthenticated)
            {
                <div id="reportrange" lang="es" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%; font-size: 15px;">
                    <i class="fa fa-calendar"></i>&nbsp;
                    <span></span> <i class="fa fa-caret-down"></i>
                </div>
            
                <div>
                    <button id="ver-eventos-button">Mis Eventos</button>
                </div>

                <div>
                    <a asp-action="Create" asp-controller="Eventos"><button id="crear-evento-button">Crear nuevo <br> evento <br><i class="material-icons">add</i></button></a> 
                </div>
            }
            else
            {
                
            }
            <link href="/css/General/Todo.css" rel="stylesheet" />
        </div>
        </aside>
        <div id="main-content">
            <div id="main-organizar">
                <div id="main-filtrar">
                    <div>
                        <button type="button" class="btn btn-light" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-content="Bottom popover">
                            Categoría
                        </button>
                    </div>
                    <div>
                        <button type="button" class="btn btn-light" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-content="Bottom popover">
                            Comuna
                        </button>
                    </div>
                    <div>
                        <button type="button" class="btn btn-light" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-content="Bottom popover">
                            Mes
                        </button>
                    </div>
                    <div>
                        <button type="button" class="btn btn-light" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-content="Bottom popover">
                            Me apunto
                        </button>
                    </div>
                </div>
                <div id="main-ordenar">
                    <div class="dropdown">
                        <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                          Ordenar por
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                          <li><a class="dropdown-item" href="#">Categoria</a></li>
                          <li><a class="dropdown-item" href="#">Lugar</a></li>
                        </ul>
                      </div>
                </div>
            </div>
 <!--
ESTO ES NUEVO:
CARRUSEL PAARA eveNTOS PREMIUM
 -->
 <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
                <div class="carousel-inner px-5">
                    @for(var i = 1 ; i <= Model.Count() ; i++)
                        {
                    <div class="carousel-item active">
                        
                        <div class="container">
                            <div class="row">
                                <!--Card-->
                                @foreach (var item in Model)
                                {
                                <div class="col-12 col-md-6">
                                    <div class="div-card2">
                                        <div class="div-card-image2">
                                            <div class="img-logo-card">
                                                <img src="~/img/logo/P.png" width="40px"/>
                                            </div>
                                        </div>
                                        <div class="div-card-content2">
                                            <div class="div-card-titulo2">
                                                <h3>@item.Titulo</h3>
                                            </div>
                                            <div class="div-card-description2">@item.Titulo
                                            </div>
                                            <div class="div-card-buttons2">
                                                <button type="button" data-bs-toggle="modal"
                                                    data-bs-target="#exampleModal">+info</button>
                                                <button>MeApunto</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 style="color:black; width: 100%; text-transform: uppercase;" class="modal-title "
                                                    id="exampleModalLabel">Titulo</h4>
                                                <button type="button" class="btn-close"
                                                    data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body" style="padding: 0px;">                                                               
                                                <div class="row" style="padding: 0.5em; padding-bottom: 3em">
                                                    <div class="col col-md-6">
                                                        <img src="https://tvline.com/wp-content/uploads/2022/04/halo-1x03-makee.jpg?w=300" style="width: 100%;"/>
                                                    </div>
                                                    <div class="col col-md-6">
                                                        <div class="row">
                                                            <div class="col-4"><strong>Categoría</strong></div>
                                                            <div class="col-8">@item.Categoria.categoria</div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-4"><strong>Dirección</strong></div>
                                                            <div class="col-8">@item.Direccion</div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-4"><strong>Fecha</strong></div>
                                                            <div class="col-8">@item.Fecha_evento</div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-4"><strong>Hora inicio</strong></div>
                                                            <div class="col-8">@item.Hora_inicio</div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-4"><strong>Hora término</strong></div>
                                                            <div class="col-8">@item.Hora_termino</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div style="background-color:lightgray; padding: 20px;">
                                                    <div class="row d-flex justify-content-center">
                                                        <button class="btn btn-primary" style="background-color:rgb(126, 10, 117); border-color: rgb(126, 10, 117); width:fit-content; transform: translateY(-85%); z-index: 9999;">
                                                            <img src="~/img/logo/Logo-MeApunto!-Puntero-Negro.png" style="width: 10em;"/></button>
                                                    </div>
                                                    <div class="d-flex justify-content-center" style="margin-top: -2em ;">
                                                        <p style="text-transform: uppercase;">
                                                            @item.Descripcion
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                }
                            </div>
                        </div>
                    </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
    <footer id="main-footer">Me Apunto</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
<script>
    const popoverTriggerList = document.querySelectorAll('[data-bs-toggle="popover"]')
    const popoverList = [...popoverTriggerList].map(popoverTriggerEl => new bootstrap.Popover(popoverTriggerEl))

</script>
