                                                            <div class="col-4"><strong>Hora inicio</strong></div>
                                                            <div class="col-8">@item.Hora_inicio.ToString("H:mm")</div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-4"><strong>Hora término</strong></div>
                                                            <div class="col-8">@item.Hora_termino.ToString("H:mm")</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div style="background-color:lightgray; padding: 20px;">
                                                    <div class="row d-flex justify-content-center">
                                                        <button class="btn btn-primary" style="background-color:rgb(126, 10, 117); border-color: rgb(126, 10, 117); width:fit-content; transform: translateY(-85%); z-index: 9999;">
                                                            <img src="~/img/logo/Logo-MeApunto!-Puntero-Negro.png" style="width: 10em;"/></button>
                                                    </div>
                                                    <div class="d-flex justify-content-center" style="margin-top: -2em ;">
                                                        <p style="text-transform: uppercase;">
                                                            @item.Descripcion
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
