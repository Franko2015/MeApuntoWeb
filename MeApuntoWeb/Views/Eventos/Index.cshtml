@model IEnumerable<Evento>
@{
    ViewData["Title"] = "EVENTOS";
    ViewData["Nav"] = "LISTADO DE EVENTOS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/style2.css">
<div class="container">

<a asp-action="Create" class="btn btn-outline-primary col-2"><i class="bi bi-person-plus-fill"> Crear evento</i></a>
<br>
<br>
  <table class="table table-hover table-bordered" style="color: black;">
  
    <thead>
      <tr>
        <th scope="col">Titulo</th>
        <th scope="col">Nombre de usuario</th>
        <th scope="col">Descripción</th>
        <th scope="col">Categoría</th>
      </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        if (item.Estado.Equals("Bloqueado") || item.Estado.Equals("Aceptado"))
        {
            <tr>
            <td>@item.Titulo</td>
            <td>@item.Usuario.Nombres @item.Usuario.Apellidos</td>
            <td>@item.Descripcion</td>
            <td>@item.Categoria.categoria</td>
            </tr>
        }
        }
     
    </tbody>
  </table>
</div>