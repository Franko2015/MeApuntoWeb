@model Lugar

@{
    ViewData["Title"] = "Nuevo lugar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form">
    <a asp-action="Index"><img class="btnVolver" src="~/return_icon_154912.png" alt="100px"></a>
    <form asp-action="Create" method="post">
        <div class="table form">
            <input class="form-text" asp-for="Direccion" placeholder="Nombre de la dirección"/>
            <input class="form-button" type="submit" value="Crear lugar"/>
        </div>
    </form>
</div>
