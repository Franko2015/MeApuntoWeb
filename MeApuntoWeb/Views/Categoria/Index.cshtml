@model List<Categoria>
   
    <div class="container">
        <br />
        <a asp-action="Create" class="btn btn-outline-primary col-2"><i class="bi bi-person-plus-fill"> Crear categoria</i></a>
      <br>
      
<br>
  <table class="table table-hover table-bordered" style="color: black;">
  
    <thead>
      <tr>
        <th scope="col">Categoria</th>
        <th scope="col">Acción</th>
      </tr>
    </thead>
    <tbody>
      <tr>
          @foreach (var item in Model)
          {
            <tr>
            <td>@item.categoria</td>
            <td><a asp-action="Delete" asp-route-Id="@item.Id"><i class="bi bi-trash2-fill btn">Borrar</i></a>
                <a asp-action="Edit" asp-route-Id="@item.Id"><i class="bi bi-edit2-fill btn">Editar</i></a>
            </td>
            </tr>
          }
    </tbody>
  </table>
</div>
      
