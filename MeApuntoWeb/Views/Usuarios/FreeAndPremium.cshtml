@model IEnumerable<Usuario>

@{
    ViewData["Title"] = "Index";
    ViewData["Nav"] = "USUARIOS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/estilos.css" rel="stylesheet"/>
<br>
<div class="container">

<a asp-action="Create" class="btn btn-primary col-2 "><i class="bi bi-person-plus-fill"> &nbsp; Crear usuario</i></a>
<br>
<br>
  <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                Tipos de usuarios
            </th>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                    if (item.Tipo_usuarioId == 3)
                    {
            <tr>
                <td>
                    @item.Nombres
                </td>
                <td>
                    @item.NombreUsuario
                </td>
                <td>
                    @item.Correo
                </td>
                <td>
                    @item.Tipo_Usuario.Tipo
                </td>
                <td>
                    <a asp-action="Bloquear" asp-route-Id="@item.Id"><i href="#" class="bi bi-trash2-fill btn"> Bloquear</i></a>
                </td>
            </tr>
                    }
                }
    </tbody>
</table>
</div>